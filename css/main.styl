@import 'mixins.styl'

*
	bbox()

body, html
	rect 100%
	margin 0
	padding 0
	overflow auto
	font-family monospace
	background-color #eeebf0
	position relative

.suggest-l
	rect 300px
	background transparent url("../i/suggest.png") no-repeat center center
	position absolute
	top 50%
	left 50%
	margin-left 200px
	margin-top -200px


	
.iphone-l
	width 600px
	height 1061px
	margin 0 auto
	margin-top 50px
	background transparent url("../i/iphone.png") no-repeat center center
	position relative

	> .screen-ll
		position absolute
		top 185px
		left 91px
		width 416px
		height 713px

.touch
	overflow hidden !important
	border 10px solid red

#wrapper
	position absolute
	left 0
	top 0
	rect 100%
	overflow auto
	
	.menu-l
		position relative
		background: rgb(105,210,231); /* Old browsers */
		/* IE9 SVG, needs conditional override of 'filter' to 'none' */
		// background: url(data:image/svg+xml;base64,);
		background: -moz-linear-gradient(top,  rgba(105,210,231,1) 0%, rgba(105,210,231,1) 50%, rgba(254,67,101,1) 51%, rgba(254,67,101,1) 100%); /* FF3.6+ */
		background: -webkit-gradient(linear, left top, left bottom, color-stop(0%,rgba(105,210,231,1)), color-stop(50%,rgba(105,210,231,1)), color-stop(51%,rgba(254,67,101,1)), color-stop(100%,rgba(254,67,101,1))); /* Chrome,Safari4+ */
		background: -webkit-linear-gradient(top,  rgba(105,210,231,1) 0%,rgba(105,210,231,1) 50%,rgba(254,67,101,1) 51%,rgba(254,67,101,1) 100%); /* Chrome10+,Safari5.1+ */
		background: -o-linear-gradient(top,  rgba(105,210,231,1) 0%,rgba(105,210,231,1) 50%,rgba(254,67,101,1) 51%,rgba(254,67,101,1) 100%); /* Opera 11.10+ */
		background: -ms-linear-gradient(top,  rgba(105,210,231,1) 0%,rgba(105,210,231,1) 50%,rgba(254,67,101,1) 51%,rgba(254,67,101,1) 100%); /* IE10+ */
		background: linear-gradient(to bottom,  rgba(105,210,231,1) 0%,rgba(105,210,231,1) 50%,rgba(254,67,101,1) 51%,rgba(254,67,101,1) 100%); /* W3C */
		// filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='#69d2e7', endColorstr='#fe4365',GradientType=0 ); /* IE6-8 */

	.content-ll
		position absolute
		top 0
		left 0
		rect 100%
		overflow hidden
		font-size 25px
		line-height 30px
		-webkit-transform: rotate3d(0,0,0);
		   -moz-transform: rotate3d(0,0,0);
		    -ms-transform: rotate3d(0,0,0);
		     -o-transform: rotate3d(0,0,0);
		        transform: rotate3d(0,0,0);
		        -webkit-transition: transform .05s linear;
		           -moz-transition: transform .05s linear;
		             -o-transition: transform .05s linear;
		                transition: transform .05s linear;


.section-b
	height 200px
	position relative
	cursor pointer

	&:active
		&:after
			rect 76px
			margin-top -38px
			margin-left -38px
			background-size 100% 100%
			-webkit-transition: all .15s ease-out;
			   -moz-transition: all .15s ease-out;
			     -o-transition: all .15s ease-out;
			        transition: all .15s ease-out;

	&.is-check
		// background-color: red
		z-index:  1
		position fixed
		rect 100%
		left 0
		top 0
		background-color red


	&:after
		position absolute
		top 50%
		left 50%
		margin-top -50px
		margin-left -50px
		content: ''
		rect 100px
		background transparent url('/icons/icecreame.png') no-repeat center center
		background transparent url('/paperjs scroll sections/icons/icecreame.png') no-repeat center center
		background-size 100% 100%

	&.is-watermellon
